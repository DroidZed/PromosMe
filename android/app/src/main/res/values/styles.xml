<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/gray_content</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/screen</item>
        <item name="android:statusBarColor">@color/primary_light</item>
    </style>

    <style name="SplashStatusBarTheme" parent="SplashScreen_SplashTheme">
        <item name="android:statusBarColor">@color/primary_light</item>
    </style>

</resources>