<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/splash_screen_light</item>
        <item name="statusBarBackground">@color/primary_light</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundColor">@color/primary_light</item>
        <item name="statusBarBackground">@color/primary_light</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">@color/primary_light</item>
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundColor">@color/primary_dark</item>
        <item name="statusBarBackground">@color/primary_dark</item>
    </style>
</resources>